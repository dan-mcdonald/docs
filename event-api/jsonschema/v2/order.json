{
    "title": "Order Schema",
    "type": "object",
    "required": [
        "id",
        "order_number",
        "customer",
        "order_date",
        "create_date",
        "change_date",
        "status",
        "subtotal",
        "total",
        "total_tax",
        "total_shipping",
        "total_payment_cost",
        "total_discounts",
        "currency",
    ],
    "properties": {
        "cookies": {"type": "object"},
        "id": {"type": "string"},
        "order_number": {"type": "string"},
        "cart_id": {"type": "string"},
        "customer": {"$ref": "http://event.jirafe.com/v2/schema/event/customer.json"},
        "order_date": {"type": "string", "format": "date-time"},
        "create_date": {"type": "string", "format": "date-time"},
        "change_date": {"type": "string", "format": "date-time"},
        "status": {
            "enum": [
                "placed",
                "accepted",
                "cancelled"
            ]
        },
        "subtotal": {"type": "number"},
        "total": {"type": "number"},
        "total_tax": {"type": "number"},
        "total_shipping": {"type": "number"},
        "total_payment_cost": {"type": "number"},
        "total_discounts": {"type": "number"},
        "currency": {"type": "string"},
        "items": {
            "type": "array",
            "items": {"$ref": "http://event.jirafe.com/v2/schema/event/order-item.json"}
        },
        "changed_items": {
            "type": "array",
            "items": {"$ref": "http://event.jirafe.com/v2/schema/event/order-item.json"}
        }
    }
}
